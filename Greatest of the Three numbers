//this code is to find Greatest of the Three numbers in java
import java.util.Scanner;  
public class ArrayInputExample1   
{  
public static void main(String[] args)   
{  
int a;  
Scanner sc=new Scanner(System.in);  
System.out.println("Enter the first number: ");  
a=sc.nextInt();
System.out.println("Enter the second number: ");
int b=sc.nextInt();
System.out.println("Enter the third number: ");  
int c=sc.nextInt();
if(a>b && a>c){
    System.out.println("a is greater number");
}
else if(b>a && b>c){
    System.out.println("b is greater number");
}
else{
    System.out.println("c is greater number");
}
}
} 

//this code is to find Greatest of the Three numbers in c
# include<stdio.h>
int main(){
int a,b,c;  
printf("Enter the first number: ");  
scanf("%d",&a);
printf("Enter the second number: ");
scanf("%d",&b);
printf("Enter the third number: "); 
scanf("%d",&c);

if(a>b && a>c){
    printf("a is greater number");
}
else if(b>a && b>c){
    printf("b is greater number");
}
else{
    printf("c is greater number");
}
}
